@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Compartida/_PaginaDiseño2.cshtml";
}

    <div class="container-fluid">
        <div class="row">
                <h2>
                    <strong>Hola</strong>
                    <label id="lb_nombreu">@Session["UserName"].ToString()...</label>
                    <input type="text" id="lb_usuario" hidden value="@Session["UserID"].ToString()">                   
                </h2>
            <hr />
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Información de sus residencias actuales
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body" >
                            <div id="residencias" class="alert alert-warning" style="overflow-x: auto;">
                                <table width="100%" class="table table-striped table-bordered table-hover" id="tabla">
                                    <thead>
                                        <tr>
                                            <th>NOMBRE CONDOMINIO</th>
                                            <th>DIRECCION VIVIENDA</th>
                                            <th>NUMERO</th>
                                            <th>PLANTA/PISO</th>
                                        </tr>
                                    </thead>
                                    <tbody id="cuerpo"></tbody>
                                </table>
                                <!-- /.table-responsive -->
                            </div>
                    </div>
                    <!-- .panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-6 -->
        </div>        
    </div>
    <!-- /.container-fluid -->

<script src="~/Scripts/jquery.js"></script>
<script>

        $(document).ready(function () {

            infoResidencias()
        });

        function infoResidencias() {
            
            $.ajax({
                type: "POST",
                url: '@Url.Action("ObtenerInfoViviendasPorResidente", "Condominios")',
                content: "application/json; charset=utf-8",
                dataType: "json",
                success: function (respuesta) {

                    if(respuesta.model !=null)
                    {
                        $("#cuerpo").empty()
                            var filas = respuesta.model.length;
                            for (i = 0 ; i < filas; i++)
                            {
                                var fila = respuesta.model[i];
                                var celda = fila.toString().split(";");
                                var nuevafila = "<tr>" +
                                "<td>" + celda[0] + "</td>" +
                                "<td>" + celda[1] + "</td>" +
                                "<td>" + celda[2] + "</td>" +
                                "<td>" + celda[3] + "</td></tr>"
                                $("#cuerpo").append(nuevafila)
                            }
                    } else
                    {
                        alert('No se han encontrado datos para cargar');
                    }
                },
                error: function (xhr, textStatus, errorThrown) {
                    alert('Error: No se pudo cargar método "ObtenerInfoViviendasPorResidente"');
                }
            });
        }       
        
</script>
