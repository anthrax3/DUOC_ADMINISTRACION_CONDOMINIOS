@{
    ViewBag.Title = "Ver Gastos";
    Layout = "~/Views/Compartida/_PaginaDiseño5.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <h2>
            <input type="text" id="lb_nombreu" hidden value="@Session["UserName"].ToString()">
            <input type="text" id="lb_usuario" hidden value="@Session["UserID"].ToString()">
        </h2>
    </div>
    <div class="row">
        <h3>
            <strong>VER PAGOS POR VIVIENDA</strong>
        </h3>
        <hr />
    </div>
    <div class="well">
        <h4>Indique los datos solicitados para visualizar la información</h4>
        <div class="form-group">
            <form class="form-inline">
                <label for="selectCondominio">Condominio</label>
                <select style="width:250px" class="form-control" name="selectCondominio" id="selectCondominio" onchange="filtrarViviendas()"></select>
                <label for="selectResidencia1">Residencias</label>
                <select class="form-control" name="selectResidencia1" id="selectResidencia1">
                    <option value="">Seleccione</option>
                </select>
            </form>
            <hr />
            <form class="form-inline">
                <label for="fechaReserva">Fecha a desde</label>
                <input type="date" id="fechaDesde" min="2017-01-01" max="2017-01-02" class="form-control" />
                <label for="fechaReserva">Fecha a hasta</label>
                <input type="date" id="fechaHasta" min="2017-01-01" max="2017-01-02" class="form-control" />
                <button type="button" id="btnFiltrar" class="btn btn-success" onclick="filtrarGastos()">Filtrar Gastos Pagados</button>
                <button type="button" id="btnFiltrar" class="btn btn-danger" onclick="filtrarGastos2()">Filtrar Gastos No Pagados</button>
            </form>
        </div>
    </div>
    <!-- /.row -->
    <div class="row" id="tabla_gastos" hidden>
        <div class="col-lg-12">
            <div class="panel panel-success">
                <div class="panel-heading">
                    Información de Gastos Pagados
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div id=tablaReservas class="alert alert-success" style="overflow-x: auto;">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="tabla">
                            <thead>
                                <tr>
                                    <th>Fecha_Gasto</th>
                                    <th>Vivienda</th>
                                    <th>Tipo</th>
                                    <th>Monto</th>
                                    <th>Documento_Pago</th>
                                    <th>Tipo_Pago</th>
                                    <th>Fecha_Pago</th>
                                </tr>
                            </thead>
                            <tbody id="cuerpo"></tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->

        </div>
        <!-- /.row -->
    </div>

    <div class="row" id="tabla_gastos2" hidden>
        <div class="col-lg-12">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    Información de  Gastos No Pagados
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div id=tablaReservas2 class="alert alert-danger" style="overflow-x: auto;">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="tabla2">
                            <thead>
                                <tr>
                                    <th>Fecha_Gasto</th>
                                    <th>Vivienda</th>
                                    <th>Tipo</th>
                                    <th>Monto</th>
                                    <th>Observación</th>
                                </tr>
                            </thead>
                            <tbody id="cuerpo2"></tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.row -->
    </div>
</div>
<!-- /.container-fluid -->
<div id="dialogoverlay"></div>
<div id="dialogbox">
    <div>
        <div id="dialogboxhead"></div>
        <div id="dialogboxbody"></div>
        <div id="dialogboxfoot"></div>
    </div>
</div>

<script src="~/Scripts/jquery.js"></script>
<script>
    $(document).ready(function () {
        cargarMisCondominios();
        var fecha_hoy = fechaHoy();
        document.getElementById("fechaDesde").max = fecha_hoy;
        document.getElementById("fechaHasta").max = fecha_hoy;
    });

    function CustomAlert() {
        this.render = function (dialog) {
            var winW = window.innerWidth;
            var winH = window.innerHeight;
            var dialogoverlay = document.getElementById('dialogoverlay');
            var dialogbox = document.getElementById('dialogbox');
            dialogoverlay.style.display = "block";
            dialogoverlay.style.height = winH + "px";
            dialogbox.style.left = (winW / 2) - (550 * .5) + "px";
            dialogbox.style.top = "100px";
            dialogbox.style.display = "block";
            document.getElementById('dialogboxhead').innerHTML = "Información";
            document.getElementById('dialogboxbody').innerHTML = dialog;
            document.getElementById('dialogboxfoot').innerHTML = '<button onclick="Alert.ok()">Entendido</button>';
        }
        this.ok = function () {
            document.getElementById('dialogbox').style.display = "none";
            document.getElementById('dialogoverlay').style.display = "none";
        }
    }
    var Alert = new CustomAlert();

    function fechaHoy() {
        var fecha = new Date();
        var anio = fecha.getFullYear();
        var dia = fecha.getDate();
        var _mes = fecha.getMonth();
        _mes = _mes + 1;
        if (_mes < 10) {
            var mes = "0" + _mes;
        }
        else {
            var mes = _mes.toString;
        }
        return anio + '-' + mes + '-' + dia;
    }

    function cargarMisCondominios() {
        $("#panelReservar").hide();
        var usuario = $('#lb_usuario').val();
        $.ajax({
            type: "POST",
            url: '@Url.Action("ObtenerCondominiosPorUsuario", "Condominios")',
            content: "application/json; charset=utf-8",
            dataType: "json",
            data: { "Usuario": usuario },
            success: function (respuesta) {
                $("#botonReservar").hide();
                if (respuesta.model != "") {
                    $("#selectCondominio").hide()
                    $("#filtro").show();
                    $("#selectCondominio").empty()
                    var filas = respuesta.model.length;
                    $("#selectCondominio").append("<option value=" + '"' + '"' + ">Seleccione</option>")
                    for (i = 0 ; i < filas; i++) {
                        var fila = respuesta.model[i];
                        var celda = fila.toString().split(";");
                        var nuevafila =
                            "<option value=" + celda[0] + ">" + celda[1] + "</option>"
                        $("#selectCondominio").append(nuevafila)
                    }
                    $("#selectCondominio").show();
                } else {
                    Alert.render('No se han encontrado condominios para su usuario');
                }
            },
            error: function (xhr, textStatus, errorThrown) {
                Alert.render('Error: No se pudo cargar método "Obtener viviendas por usuario"');
            }
        });
    }

    function filtrarViviendas() {
        var condominio = $('select#selectCondominio').val();
        if (condominio == "") {
            Alert.render('Debe indicar un condominio');
        } else {
            $.ajax({
                type: "POST",
                url: '@Url.Action("ObtenerResidenciasPorCondominio", "Condominios")',
                content: "application/json; charset=utf-8",
                dataType: "json",
                data: { "Condominio": condominio },
                success: function (respuesta) {
                    if (respuesta.model != "") {
                        $("#selectResidencia1").empty()
                        var filas = respuesta.model.length;
                        $("#selectResidencia1").append("<option value=" + '"' + '"' + ">Seleccione</option>")
                        for (i = 0 ; i < filas; i++) {
                            var fila = respuesta.model[i];
                            var celda = fila.toString().split(";");
                            var nuevafila =
                                "<option value=" + celda[0] + ">" + celda[1] + ' #' + celda[2] + ' - Piso/Planta ' + celda[3] + "</option>"
                            $("#selectResidencia1").append(nuevafila)
                        }
                    } else {
                        Alert.render('No se han encontrado viviendas para este condominio');
                        $("#selectResidencia1").empty()
                        $("#selectResidencia1").append("<option value=" + '"' + '"' + ">Seleccione</option>")
                    }
                },
                error: function (xhr, textStatus, errorThrown) {
                    Alert.render('Error: No se pudo cargar método "Obtener viviendas por condominios"');
                }
            });
        }
    }



    function filtrarGastos() {


        var desde = $("#fechaDesde").val();
        var hasta = $("#fechaHasta").val();
        var residencia = $('select#selectResidencia1').val();

        if (residencia == "") {
            Alert.render('Debe indicar una condominio a consultar');
        } else {
            if (desde == "") {
                Alert.render('Indique una fecha desde cuando consultar');
            } else {
                if (hasta == "") {
                    Alert.render('Indique una fecha hasta cuando consultar');
                } else {
                    if (desde > hasta) {
                        Alert.render('La fecha desde no puede ser mayor a hasta');
                    } else {
                        $.ajax({
                            type: "POST",
                            url: '@Url.Action("ObtenerInfoGastoPagadoPorFechaPorVivienda", "GastosComunes")',
                            content: "application/json; charset=utf-8",
                            dataType: "json",
                            data: { "Desde": desde, "Hasta": hasta, "Residencia": residencia },
                            success: function (respuesta) {
                                if (respuesta.model.length != 0) {
                                    $("#cuerpo").empty()
                                    var filas = respuesta.model.length;

                                    for (i = 0 ; i < filas; i++) {
                                        var fila = respuesta.model[i];
                                        var celda = fila.toString().split("&&");
                                        var nuevafila = "<tr><td>" +
                                        celda[0] + "</td><td>" +
                                        celda[1] + "</td><td> " +
                                        celda[2] + "</td><td> $" +
                                        celda[3] + "</td><td>" +
                                        celda[4] + "</td><td>" +
                                        celda[5] + "</td><td>" +
                                        celda[6] + "</td></tr>"

                                        $("#tabla").append(nuevafila)
                                    }
                                    $("#tabla_gastos2").hide();
                                    $("#tabla_gastos").show();
                                } else {
                                    Alert.render("No hay datos registrados para la busqueda gastos pagados");
                                }


                            },
                            error: function (xhr, textStatus, errorThrown) {
                                Alert.render('Error al cargar el metodo del controlador:"Filtrar gastos pagados');
                            }
                        });

                    }
                }
            }
        }
    }

    function filtrarGastos2() {


        var desde = $("#fechaDesde").val();
        var hasta = $("#fechaHasta").val();
        var residencia = $('select#selectResidencia1').val();

        if (residencia == "") {
            Alert.render('Debe indicar una condominio a consultar');
        } else {
            if (desde == "") {
                Alert.render('Indique una fecha desde cuando consultar');
            } else {
                if (hasta == "") {
                    Alert.render('Indique una fecha hasta cuando consultar');
                } else {
                    if (desde > hasta) {
                        Alert.render('La fecha desde no puede ser mayor a hasta');
                    } else {
                        $.ajax({
                            type: "POST",
                            url: '@Url.Action("ObtenerInfoGastoNoPagadaPorFechaPorVivienda", "GastosComunes")',
                            content: "application/json; charset=utf-8",
                            dataType: "json",
                            data: { "Desde": desde, "Hasta": hasta, "Residencia": residencia },
                            success: function (respuesta) {
                                if (respuesta.model.length != 0) {
                                    $("#cuerpo2").empty()
                                    var filas = respuesta.model.length;

                                    for (i = 0 ; i < filas; i++) {
                                        var fila = respuesta.model[i];
                                        var celda = fila.toString().split("&&");
                                        var nuevafila = "<tr><td>" +
                                        celda[0] + "</td><td>" +
                                        celda[1] + "</td><td>" +
                                        celda[2] + "</td><td> $" +
                                        celda[3] + "</td><td>" +
                                        celda[4] + "</td></tr>"

                                        $("#tabla2").append(nuevafila)
                                    }
                                    $("#tabla_gastos").hide();
                                    $("#tabla_gastos2").show();
                                } else {
                                    Alert.render("No hay datos registrados para la busqueda gastos no pagos");
                                }

                            },
                            error: function (xhr, textStatus, errorThrown) {
                                Alert.render('Error al cargar el metodo del controlador:"Filtrar gastos no pagos"');
                            }
                        });

                    }
                }
            }
        }
    }

</script>

