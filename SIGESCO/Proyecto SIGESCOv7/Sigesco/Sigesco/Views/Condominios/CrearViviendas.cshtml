@{
    ViewBag.Title = "Crear Viviendas";
    Layout = "~/Views/Compartida/_PaginaDiseño6.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <h2>
            <input type="text" id="lb_nombreu" hidden value="@Session["UserName"].ToString()">
            <input type="text" id="lb_usuario" hidden value="@Session["UserID"].ToString()">
        </h2>
    </div>
    <div class="row">
        <h3>
            <strong>REGISTRAR VIVIENDA</strong>
        </h3>
        <hr />
    </div>
    <div class="row" id="tabla_reserv">
        <div class="col-lg-12">
            <div class="panel panel-default" id="panelCrear">
                <div class="panel-heading">
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div id="personal" class="alert alert-warning">
                        <h3>Información Vivienda</h3>
                        <hr />
                        <div class="form-group">
                            <label>Direccion</label>**
                            <input type="text" id="direccion" maxlength="10" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Numero Direccion</label>**
                            <input type="number" id="numerodire" class="form-control">
                        </div>
                        <div class="form-group">
                            <div class="form-group">
                                <label>Piso o Planta</label>**
                                <input id="txtplanta" class="form-control" type="number">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="selectCondominio">Condominio</label>**
                            <select class="form-control" name="selectCondominio" id="selectCondominio" ></select>
                        </div>                        
                        <div class="btn-group" data-toggle="buttons">
                            <input type="button" class="btn btn-primary" onclick="crearResidente()" value="Crear Vivienda">
                        </div>
                    </div>

                    <div class="alert alert-success" style="overflow-x: auto;">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="tabla">
                            <thead>
                                <tr>
                                    <th>Nombre de Condominio</th>
                                    <th>Direccion</th>
                                    <th>Ubicación Piso / Planta</th>
                                </tr>
                            </thead>
                            <tbody id="cuerpo"></tbody>
                        </table>
                        <!-- /.table-responsive -->
                    </div>
                </div>
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.container-fluid -->
        <div id="dialogoverlay"></div>
        <div id="dialogbox">
            <div>
                <div id="dialogboxhead"></div>
                <div id="dialogboxbody"></div>
                <div id="dialogboxfoot"></div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery.js"></script>
<script>
    $(document).ready(function () {
        $("#panelTabla").hide();
        cargarMisCondominios();
        filtarEspacios();

    });
    function CustomAlert() {
        this.render = function (dialog) {
            var winW = window.innerWidth;
            var winH = window.innerHeight;
            var dialogoverlay = document.getElementById('dialogoverlay');
            var dialogbox = document.getElementById('dialogbox');
            dialogoverlay.style.display = "block";
            dialogoverlay.style.height = winH + "px";
            dialogbox.style.left = (winW / 2) - (550 * .5) + "px";
            dialogbox.style.top = "100px";
            dialogbox.style.display = "block";
            document.getElementById('dialogboxhead').innerHTML = "Información";
            document.getElementById('dialogboxbody').innerHTML = dialog;
            document.getElementById('dialogboxfoot').innerHTML = '<button onclick="Alert.ok()">Entendido</button>';
        }
        this.ok = function () {
            document.getElementById('dialogbox').style.display = "none";
            document.getElementById('dialogoverlay').style.display = "none";
        }
    }
    var Alert = new CustomAlert();

    function cargarMisCondominios() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("GetCondominios", "Condominios")',
            content: "application/json; charset=utf-8",
            dataType: "json",
            success: function (respuesta) {
                if (respuesta.model != "") {
                    $("#selectCondominio").hide()
                    $("#selectCondominio").empty()
                    var filas = respuesta.model.length;
                    $("#selectCondominio").append("<option value=" + '"' + '"' + ">Seleccione</option>")
                    for (i = 0 ; i < filas; i++) {
                        var fila = respuesta.model[i];
                        var celda = fila.toString().split(";");
                        var nuevafila =
                            "<option value=" + celda[3] + ">" + celda[0] + " - " + celda[1] + "   fono:" + celda[2] + "</option>"
                        $("#selectCondominio").append(nuevafila)
                    }
                    $("#selectCondominio").show();
                } else {
                    Alert.render('No se han encontrado regiones');
                }
            },
            error: function (xhr, textStatus, errorThrown) {
                Alert.render('Error: No se pudo cargar método "Obtener regiones"');
            }
        });
    }



    function crearResidente()
    {
        var direccion = $("#direccion").val();
        var numerodire = $("#numerodire").val();
        var condominio = $("select#selectCondominio").val();
        var planta = $("#txtplanta").val();

        if (direccion.length < 5)
        {
            Alert.render('Ingrese direción válida');
        }else
        {
            if (numerodire.length=="") {
                Alert.render('Ingrese numero de dirección válido');
            } else {
                if (condominio == "") {
                    Alert.render('Seleccione un condominio');
                } else {
                    if (planta == "") {
                        Alert.render('Indique una planta o piso condominio');
                    }else{
                        $.ajax({
                            type: "POST",
                            url: '@Url.Action("CrearVivienda", "Condominios")',
                            content: "application/json; charset=utf-8",
                            dataType: "json",
                            data: { "direccion": direccion, "numerodire": numerodire, "condominio": condominio,"planta" :planta},
                            success: function (respuesta) {
                                if (respuesta.model) {

                                    $("#direccion").val("");
                                    $("#numerodire").val("");
                                    $("#selectCondominio").val("");
                                    Alert.render('Vivienda ingresado exitosamente');
                                    filtarEspacios();
                                    cargarMisCondominios();
                                } else {
                                    Alert.render('No se han ingresado el registro');
                                }
                            },
                            error: function (xhr, textStatus, errorThrown) {
                                Alert.render('Error: No se pudo cargar método "Ingresar Vivienda"');
                            }
                        });
                  

                    }
                        }
                    }
                }

    }


    function filtarEspacios() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("GetViviendas", "Condominios")',
            content: "application/json; charset=utf-8",
            dataType: "json",
            success: function (respuesta) {
                $("#cuerpo").empty();
                if (respuesta.model != "") {
                    var filas = respuesta.model.length;
                    for (i = 0 ; i < filas; i++) {
                        var fila = respuesta.model[i];
                        var celda = fila.toString().split(";");
                        var nuevafila = "<tr>" +
                             "<td>" + celda[0] + "</td>" +
                            "<td>" + celda[1] + ' #' + celda[2] + "</td>" +
                            "<td>" + celda[3] + "</td></tr>"

                        $("#cuerpo").append(nuevafila);
                    }
                } else {
                    Alert.render('No se han encontrado información para de condominios');
                }
            },
            error: function (xhr, textStatus, errorThrown) {
                Alert.render('Error: No se pudo cargar método "Obtener Condominios"');
            }
        });
    }



    var Fn = {
        // Valida el rut con su cadena completa "XXXXXXXX-X"
        dv: function (T) {
            var M = 0, S = 1;
            for (; T; T = Math.floor(T / 10))
                S = (S + T % 10 * (9 - M++ % 6)) % 11;
            return S ? S - 1 : 'k';
        },
        validaRut: function (rutCompleto) {
            if (!/^[0-9]+[-|‐]{1}[0-9kK]{1}$/.test(rutCompleto)) {
                Alert.render('Debe ingresar rut en formato indicado');
                return false;
            }
            var tmp = rutCompleto.split('-');
            var digv = tmp[1];
            var rut = tmp[0];
            if (digv == 'K') digv = 'k';
            return (Fn.dv(rut) == digv);
        }

    }

    function valEmail(valor){
        re=/^[_a-z0-9-]+(.[_a-z0-9-]+)*@@[a-z0-9-]+(.[a-z0-9-]+)*(.[a-z]{2,3})$/
        if(!re.exec(valor))    {
            return false;
        }else{
            return true;
        }
    }






</script>




